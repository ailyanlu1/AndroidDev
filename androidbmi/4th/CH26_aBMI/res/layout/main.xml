<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/us_height" />
	<EditText android:id="@+id/feet" 
		android:layout_height="wrap_content" android:text=""
		android:layout_width="match_parent"></EditText>
	<EditText android:id="@+id/inch"
		android:layout_height="wrap_content" android:text=""
		android:layout_width="match_parent"></EditText>
	<TextView android:text="@string/pound"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<EditText android:id="@+id/weight"
		android:layout_height="wrap_content" android:text=""
		android:layout_width="match_parent"
		android:inputType="numberDecimal"></EditText>
	<Button android:id="@+id/submit"
		android:text="@string/bmi_btn"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<TextView android:id="@+id/result"
		android:text="" android:singleLine="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	<TextView android:id="@+id/suggest"
		android:text=""
		android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
</LinearLayout>
